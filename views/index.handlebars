          </thead>
          <tbody class="developer-list">
          </tbody>
        </table>
 --}}       
        <ul id="developer-list" class="list-group">
          {{#each Developers}}
            <li data-id="{{this.id}}" class="list-group-item">
              <a href="developers/{{this.id}}">{{this.name}}</a>
              <button class="btn btn-danger float-right delete">ï½˜</button>
            </li>
          {{/each}}
        </ul>

        <h3>Clients:</h3>
        <ul>
          {{#each Clients}}
            <li>{{this.name}}</li>
            <li>{{this.phone_number}}</li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
